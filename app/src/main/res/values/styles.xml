<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CheckboxStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimaryDisableOnly">@android:color/white</item> <!-- red -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/rating</item>
    </style>


    <style name="sectionHeader"   parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:paddingLeft">@dimen/_4sdp</item>
        <item name="android:paddingRight">@dimen/_4sdp</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="android:textSize">14sp</item>-->
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/restaurant_name</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/darkText</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <!-- Used for the background -->
        <item name="android:background">@color/lightText</item>
    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat">

    </style>


</resources>
